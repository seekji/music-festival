<header class="page-header {{ app.request.attributes.get('_route') == 'app.homepage' ? '' : 'page-header--inner-page' }}">
  <div class="page-header__inner">

    <button class="page-header__menu-toggler menu-toggler"><span></span></button>

    {% if app.request.locale == 'en' %}
      <div class="page-header__lang-wrap">
        <a href="/" class="page-header__lang">Ru</a>
      </div>
    {% else %}
      <div class="page-header__lang-wrap">
        <a href="/en/" class="page-header__lang">En</a>
      </div>
    {% endif %}

    {% if app.request.attributes.get('_route') == 'app.homepage' %}
      {% if app.request.locale == 'en' %}
        <div class="page-header__logo">
          <picture>
            <source media="(max-width: 1023px)" srcset="{{ asset('build/assets/images/logo_eng_mob.svg') }}">
            <img
              src="{{ asset('build/assets/images/logo_eng.svg') }}"
              alt="Rock on Volga logo 2020">
          </picture>
        </div>
      {% else %}
        <div class="page-header__logo">
          <picture>
            <source media="(max-width: 1023px)" srcset="{{ asset('build/assets/images/logo_ru_mob.svg') }}">
            <img
              src="{{ asset('build/assets/images/logo_ru.svg') }}"
              alt="Логотип фестиваля Рок над Волгой 2020">
          </picture>
        </div>
      {% endif %}
    {% else %}
      {% if app.request.locale == 'en' %}
        <a href="{{ url('app.homepage', {'_locale' : app.request.locale})}}" class="page-header__logo">
          <picture>
            <source media="(max-width: 1023px)" srcset="{{ asset('build/assets/images/logo_eng_mob.svg') }}">
            <img
              src="{{ asset('build/assets/images/logo_eng.svg') }}"
              alt="Rock on Volga logo 2020">
          </picture>
        </a>
      {% else %}
        <a href="{{ url('app.homepage', {'_locale' : app.request.locale})}}" class="page-header__logo">
          <picture>
            <source media="(max-width: 1023px)" srcset="{{ asset('build/assets/images/logo_ru_mob.svg') }}">
            <img
              src="{{ asset('build/assets/images/logo_ru.svg') }}"
              alt="Логотип фестиваля Рок над Волгой 2020">
          </picture>
        </a>
      {% endif %}
    {% endif %}

    <div class="page-header__main-nav">
      {{ include('blocks/main_nav.html.twig') }}
    </div>
  </div>
</header>