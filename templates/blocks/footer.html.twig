<footer class="page-footer">
  <div class="page-footer__top partners">
    <div class="partners__inner">
      <h2 class="partners__title">
        <div class="partners__title-part">{{ 'text.thanks'|trans({}, 'site') }}</div>
        {{ 'text.thanks.all'|trans({}, 'site') }}
      </h2>

      {% if partners|length > 0 %}
      <div class="partners__items">
        <div class="partners__row">
          {% for partner in partners|slice(0, 2) %}
            <div class="partners__logo-wrap {{ partner.isBig ? 'partners__logo-wrap--large' : '' }}">
              <a href="{{ partner.link ? : 'javascript:void(0);' }}"
                 class="partners__logo" target="_blank">
                <img
                  src="{% path partner.picture, 'reference' %}"
                  alt="{{ partner.name }}"
                  class="partners__logo-img">
              </a>
            </div>
          {% endfor %}
        </div>
        <div class="partners__row">
          {% for partner in partners|slice(2) %}
            <div class="partners__logo-wrap">
              <a href="{{ partner.link ? : 'javascript:void(0);' }}" class="partners__logo" target="_blank">
                <img
                  src="{% path partner.picture, 'reference' %}"
                  alt="{{ partner.name }}"
                  class="partners__logo-img">
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
    {% endif %}
  </div>

  <div class="page-footer__bottom">
    <div class="page-footer__container">
      <div class="page-footer__content">
        <div class="page-footer__content-top">
          <div class="page-footer__nav footer-nav">
            {% set items = columnMenuLinks(constant('App\\Entity\\Menu::LOCATION_FOOTER'), app.request.locale) %}
            {% for column, links in items %}
              <div class="footer-nav__block">
                <h3 class="footer-nav__block-title">{{ column|trans({}, 'site') }}</h3>
                <ul class="footer-nav__list">
                  {% for item in links %}
                    <li class="footer-nav__item">
                      <a href="{{ item.link }}" class="footer-nav__link">
                        {{ item.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            {% endfor %}
          </div>
          <div class="page-footer__contacts">
            {% if app.request.attributes.get('_route') == 'app.homepage' %}
              <div class="page-footer__logo">
                <img
                  src="{{ asset('logo.src'|trans({}, 'site')) }}"
                  alt="'logo.alt'|trans({}, 'site')"
                  class="page-footer__logo-img">
              </div>
            {% else %}
              <a href="{{ url('app.homepage', {'_locale' : app.request.locale}) }}" class="page-footer__logo">
                <img
                  src="{{ asset('logo.src'|trans({}, 'site')) }}"
                  alt="'logo.alt'|trans({}, 'site')"
                  class="page-footer__logo-img">
              </a>
            {% endif %}

            <div class="page-footer__contacts-inner">
              <div class="page-footer__socials socials socials--red socials--horizontal">
                <a href="{{ getSiteSettingByKey('vk') is not null ? getSiteSettingByKey('vk') : '#' }}"
                   class="socials__link" title="Vkontakte">
                  <svg class="socials__icon" width="33" height="21">
                    <use xlink:href="#icon-vk"></use>
                  </svg>
                </a>
                <a href="{{ getSiteSettingByKey('facebook') is not null ? getSiteSettingByKey('facebook') : '#' }}"
                   class="socials__link" title="Facebook">
                  <svg class="socials__icon" width="15" height="27">
                    <use xlink:href="#icon-fb"></use>
                  </svg>
                </a>
                <a href="{{ getSiteSettingByKey('youtube') is not null ? getSiteSettingByKey('youtube') : '#' }}"
                   class="socials__link" title="Youtube">
                  <svg class="socials__icon" width="33" height="27">
                    <use xlink:href="#icon-youtube"></use>
                  </svg>
                </a>
              </div>
              <div class="organizer">
                <div class="organizer__text">{{ 'text.organiser'|trans({}, 'site') }}</div>
                <img
                  src="{{ asset('build/assets/images/organizer_logo.svg') }}"
                  alt="Logo"
                  class="organizer__logo">
              </div>
            </div>
          </div>
        </div>
        <div class="page-footer__content-bottom">
          <div class="page-footer__copyright">
            &copy; 2009 &mdash; 2020 {{ 'text.festival.name'|trans({}, 'site') }}
          </div>
          <a href="oxyo.space" target="_blank" class="page-footer__dev">
            <div class="page-footer__dev-text">{{ 'text.made.in'|trans({}, 'site') }}</div>
            <svg class="page-footer__dev-logo">
              <use xlink:href="#oxyo"></use>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>