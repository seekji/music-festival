{% set items = menuLinks(constant('App\\Entity\\Menu::LOCATION_MAIN'), app.request.locale) %}
{% if items|length > 0 %}
    <ul class="main-nav">
        {% for item in items %}
            <li class="main-nav__item">
                <a href="{{ item.link }}" class="main-nav__link">
                    {{ item.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
